<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" id="@ionic-enterprise/auth" version="3.10.2">
    <name>@ionic-enterprise/auth</name>
    <description>Ionic Enterprise Cordova Auth Plugin</description>
    <engines>
        <engine name="cordova" version=">=4.0.0"/>
        <engine name="cordova-android" version=">=9.0.0-dev"/>
    </engines>
    <license>SEE LICENSE</license>
    <keywords/>
    <repo>git+https://github.com/ionic-team/cordova-ionic-auth.git</repo>
    <issue>https://github.com/driftyco/cordova-ionic-auth/issues</issue>
    <preference name="AUTH_URL_SCHEME"/>
    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="SecureWebView">
                <param name="android-package" value="com.ionicframework.auth.securewebview.SecureWebView"/>
                <param name="onload" value="true"/>
            </feature>
            <feature name="IonicHttp">
                <param name="android-package" value="com.ionicframework.auth.ionichttp.IonicHttp"/>
            </feature>
            <feature name="IonicAuthConnectStorage">
                <param name="android-package" value="com.ionicframework.auth.ionicauthconnectstorage.IonicAuthConnectStorage"/>
            </feature>
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/*/application/activity">
            <intent-filter>
                <data android:scheme="$AUTH_URL_SCHEME"/>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
            </intent-filter>
            <!-- Allow app to handle Share menu intents for text -->
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/*"/>
            </intent-filter>
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/*">
            <queries>
                <intent>
                    <action android:name="android.support.customtabs.action.CustomTabsService"/>
                </intent>
            </queries>
        </config-file>
        <config-file target="config.xml" parent="/*">
            <preference name="AndroidLaunchMode" value="singleTask"/>
        </config-file>
        <framework src="androidx.browser:browser:1.3.0"/>
        <source-file src="src/android/SecureWebView.java" target-dir="src/com/ionicframework/auth/securewebview"/>
        <source-file src="src/android/CustomTabServiceHelper.java" target-dir="src/com/ionicframework/auth/securewebview/shared"/>
        <source-file src="src/android/CustomTabsHelper.java" target-dir="src/com/ionicframework/auth/securewebview/shared"/>
        <source-file src="src/android/ServiceConnection.java" target-dir="src/com/ionicframework/auth/securewebview/shared"/>
        <source-file src="src/android/ServiceConnectionCallback.java" target-dir="src/com/ionicframework/auth/securewebview/shared"/>
        <source-file src="src/android/res/anim/slide_in_left.xml" target-dir="res/anim"/>
        <source-file src="src/android/res/anim/slide_in_right.xml" target-dir="res/anim"/>
        <source-file src="src/android/res/anim/slide_out_left.xml" target-dir="res/anim"/>
        <source-file src="src/android/res/anim/slide_out_right.xml" target-dir="res/anim"/>
        <source-file src="src/android/CordovaHttpBase.java" target-dir="src/com/ionicframework/auth/ionichttp"/>
        <source-file src="src/android/CordovaHttpOperation.java" target-dir="src/com/ionicframework/auth/ionichttp"/>
        <source-file src="src/android/IonicHttp.java" target-dir="src/com/ionicframework/auth/ionichttp"/>
        <source-file src="src/android/CordovaHttpResponse.java" target-dir="src/com/ionicframework/auth/ionichttp"/>
        <source-file src="src/android/HttpBodyDecoder.java" target-dir="src/com/ionicframework/auth/ionichttp/http"/>
        <source-file src="src/android/HttpRequest.java" target-dir="src/com/ionicframework/auth/ionichttp/http"/>
        <source-file src="src/android/JsonUtils.java" target-dir="src/com/ionicframework/auth/ionichttp/http"/>
        <source-file src="src/android/KeyChainKeyManager.java" target-dir="src/com/ionicframework/auth/ionichttp/http"/>
        <source-file src="src/android/TLSConfiguration.java" target-dir="src/com/ionicframework/auth/ionichttp/http"/>
        <source-file src="src/android/TLSSocketFactory.java" target-dir="src/com/ionicframework/auth/ionichttp/http"/>
        <source-file src="src/android/IonicAuthConnectStorage.java" target-dir="src/com/ionicframework/auth/ionicauthconnectstorage"/>
    </platform>
    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="SecureWebView">
                <param name="ios-package" value="SecureWebView"/>
            </feature>
            <feature name="IonicHttp">
                <param name="ios-package" value="IonicHttp"/>
            </feature>
            <feature name="IonicAuthConnectStorage">
                <param name="ios-package" value="IonicAuthConnectStorage"/>
            </feature>
            <preference name="UseSwiftLanguageVersion" value="4.2"/>
        </config-file>
        <config-file target="*-Info.plist" parent="CFBundleURLTypes">
            <array>
                <dict>
                    <key>CFBundleURLSchemes</key>
                    <array>
                        <string>$AUTH_URL_SCHEME</string>
                    </array>
                </dict>
            </array>
        </config-file>
        <header-file src="src/ios/SecureWebView.h"/>
        <source-file src="src/ios/SecureWebView.m"/>
        <header-file src="src/ios/IonicHttp.h"/>
        <header-file src="src/ios/IAC_BinaryResponseSerializer.h"/>
        <header-file src="src/ios/IAC_TextResponseSerializer.h"/>
        <header-file src="src/ios/IAC_TextRequestSerializer.h"/>
        <header-file src="src/ios/AFNetworking/IAC_AFHTTPSessionManager.h"/>
        <header-file src="src/ios/AFNetworking/AFNetworking.h"/>
        <header-file src="src/ios/AFNetworking/IAC_AFNetworkReachabilityManager.h"/>
        <header-file src="src/ios/AFNetworking/IAC_AFSecurityPolicy.h"/>
        <header-file src="src/ios/AFNetworking/IAC_AFURLRequestSerialization.h"/>
        <header-file src="src/ios/AFNetworking/IAC_AFURLResponseSerialization.h"/>
        <header-file src="src/ios/AFNetworking/IAC_AFURLSessionManager.h"/>
        <header-file src="src/ios/SDNetworkActivityIndicator/IAC_SDNetworkActivityIndicator.h"/>
        <source-file src="src/ios/IonicHttp.m"/>
        <source-file src="src/ios/IAC_BinaryResponseSerializer.m"/>
        <source-file src="src/ios/IAC_TextResponseSerializer.m"/>
        <source-file src="src/ios/IAC_TextRequestSerializer.m"/>
        <source-file src="src/ios/AFNetworking/IAC_AFHTTPSessionManager.m"/>
        <source-file src="src/ios/AFNetworking/IAC_AFNetworkReachabilityManager.m"/>
        <source-file src="src/ios/AFNetworking/IAC_AFSecurityPolicy.m"/>
        <source-file src="src/ios/AFNetworking/IAC_AFURLRequestSerialization.m"/>
        <source-file src="src/ios/AFNetworking/IAC_AFURLResponseSerialization.m"/>
        <source-file src="src/ios/AFNetworking/IAC_AFURLSessionManager.m"/>
        <source-file src="src/ios/SDNetworkActivityIndicator/IAC_SDNetworkActivityIndicator.m"/>
        <source-file src="src/ios/IonicAuthConnectStorage.swift"/>
        <dependency id="cordova-plugin-add-swift-support" version="2.0.2"/>
        <framework src="Security.framework"/>
        <framework src="SystemConfiguration.framework"/>
        <framework src="SafariServices.framework" weak="true"/>
    </platform>
</plugin>
